---
interface Props {
    headline: string;
    image?: string;
    buttonText?: string;
}

const { headline, image, buttonText } = Astro.props;
---

<div class="hero bg-base-200 min-h-screen">
    <div class="hero-content text-center">
        {image ? <img src={image} class="max-w-sm rounded-lg shadow-2xl" /> : null}
        <div class="max-w-md">
            <h1 class="text-5xl font-bold">{headline}</h1>
            <p class="py-6">
                <slot />
            </p>
            {buttonText ? <button class="btn btn-primary">Get Started</button> : null}
        </div>
    </div>
</div>
